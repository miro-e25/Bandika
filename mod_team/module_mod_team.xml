<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mod_team" default="compile.module.mod_team">
  <dirname property="module.mod_team.basedir" file="${ant.file.module_mod_team}"/>
  
  <property name="module.jdk.home.mod_team" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mod_team" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mod_team" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mod_team" value="${compiler.args}"/>
  
  <property name="mod_team.output.dir" value="${module.mod_team.basedir}/../out/production/mod_team"/>
  <property name="mod_team.testoutput.dir" value="${module.mod_team.basedir}/../out/test/mod_team"/>
  
  <path id="mod_team.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mod_team.module.production.classpath">
    <path refid="${module.jdk.classpath.mod_team}"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <pathelement location="${mod_portal.output.dir}"/>
    <path refid="library.tomcatlib.classpath"/>
    <pathelement location="${mod_search.output.dir}"/>
    <pathelement location="${mod_webuser.output.dir}"/>
  </path>
  
  <path id="mod_team.runtime.production.module.classpath">
    <pathelement location="${mod_team.output.dir}"/>
    <path refid="base_app.runtime.production.module.classpath"/>
    <path refid="mod_webapp.runtime.production.module.classpath"/>
    <path refid="mod_portal.runtime.production.module.classpath"/>
    <path refid="mod_search.runtime.production.module.classpath"/>
    <path refid="mod_webuser.runtime.production.module.classpath"/>
  </path>
  
  <path id="mod_team.module.classpath">
    <path refid="${module.jdk.classpath.mod_team}"/>
    <pathelement location="${mod_team.output.dir}"/>
    <pathelement location="${base_app.testoutput.dir}"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_webapp.testoutput.dir}"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <pathelement location="${mod_portal.testoutput.dir}"/>
    <pathelement location="${mod_portal.output.dir}"/>
    <path refid="library.tomcatlib.classpath"/>
    <pathelement location="${mod_search.testoutput.dir}"/>
    <pathelement location="${mod_search.output.dir}"/>
    <pathelement location="${mod_webuser.testoutput.dir}"/>
    <pathelement location="${mod_webuser.output.dir}"/>
  </path>
  
  <path id="mod_team.runtime.module.classpath">
    <pathelement location="${mod_team.testoutput.dir}"/>
    <pathelement location="${mod_team.output.dir}"/>
    <path refid="base_app.runtime.module.classpath"/>
    <path refid="mod_webapp.runtime.module.classpath"/>
    <path refid="mod_portal.runtime.module.classpath"/>
    <path refid="library.tomcatlib.classpath"/>
    <path refid="mod_search.runtime.module.classpath"/>
    <path refid="mod_webuser.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.mod_team">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mod_team">
    <patternset refid="excluded.from.module.mod_team"/>
  </patternset>
  
  <path id="mod_team.module.sourcepath">
    <dirset dir="${module.mod_team.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mod_team" depends="compile.module.mod_team.production,compile.module.mod_team.tests" description="Compile module mod_team"/>
  
  <target name="compile.module.mod_team.production" depends="compile.module.base_app,compile.module.mod_webapp,compile.module.mod_portal,compile.module.mod_search,compile.module.mod_webuser" description="Compile module mod_team; production classes">
    <mkdir dir="${mod_team.output.dir}"/>
    <javac destdir="${mod_team.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mod_team}/javac">
      <compilerarg line="${compiler.args.mod_team}"/>
      <bootclasspath refid="mod_team.module.bootclasspath"/>
      <classpath refid="mod_team.module.production.classpath"/>
      <src refid="mod_team.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mod_team"/>
    </javac>
    
    <copy todir="${mod_team.output.dir}">
      <fileset dir="${module.mod_team.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mod_team.tests" depends="compile.module.mod_team.production" description="compile module mod_team; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mod_team" description="cleanup module">
    <delete dir="${mod_team.output.dir}"/>
    <delete dir="${mod_team.testoutput.dir}"/>
  </target>
</project>