<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mod_webuser" default="compile.module.mod_webuser">
  <dirname property="module.mod_webuser.basedir" file="${ant.file.module_mod_webuser}"/>
  
  <property name="module.jdk.home.mod_webuser" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mod_webuser" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mod_webuser" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mod_webuser" value="${compiler.args}"/>
  
  <property name="mod_webuser.output.dir" value="${module.mod_webuser.basedir}/../out/production/mod_webuser"/>
  <property name="mod_webuser.testoutput.dir" value="${module.mod_webuser.basedir}/../out/test/mod_webuser"/>
  
  <path id="mod_webuser.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mod_webuser.module.production.classpath">
    <path refid="${module.jdk.classpath.mod_webuser}"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <path refid="library.tomcatlib.classpath"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_mail.output.dir}"/>
    <pathelement location="${mod_crypto.output.dir}"/>
  </path>
  
  <path id="mod_webuser.runtime.production.module.classpath">
    <pathelement location="${mod_webuser.output.dir}"/>
    <path refid="mod_webapp.runtime.production.module.classpath"/>
    <path refid="base_app.runtime.production.module.classpath"/>
    <path refid="mod_mail.runtime.production.module.classpath"/>
    <path refid="mod_crypto.runtime.production.module.classpath"/>
  </path>
  
  <path id="mod_webuser.module.classpath">
    <path refid="${module.jdk.classpath.mod_webuser}"/>
    <pathelement location="${mod_webuser.output.dir}"/>
    <pathelement location="${mod_webapp.testoutput.dir}"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <path refid="library.tomcatlib.classpath"/>
    <pathelement location="${base_app.testoutput.dir}"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_mail.testoutput.dir}"/>
    <pathelement location="${mod_mail.output.dir}"/>
    <pathelement location="${mod_crypto.testoutput.dir}"/>
    <pathelement location="${mod_crypto.output.dir}"/>
  </path>
  
  <path id="mod_webuser.runtime.module.classpath">
    <pathelement location="${mod_webuser.testoutput.dir}"/>
    <pathelement location="${mod_webuser.output.dir}"/>
    <path refid="mod_webapp.runtime.module.classpath"/>
    <path refid="library.tomcatlib.classpath"/>
    <path refid="base_app.runtime.module.classpath"/>
    <path refid="mod_mail.runtime.module.classpath"/>
    <path refid="mod_crypto.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.mod_webuser">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mod_webuser">
    <patternset refid="excluded.from.module.mod_webuser"/>
  </patternset>
  
  <path id="mod_webuser.module.sourcepath">
    <dirset dir="${module.mod_webuser.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mod_webuser" depends="compile.module.mod_webuser.production,compile.module.mod_webuser.tests" description="Compile module mod_webuser"/>
  
  <target name="compile.module.mod_webuser.production" depends="compile.module.mod_webapp,compile.module.base_app,compile.module.mod_mail,compile.module.mod_crypto" description="Compile module mod_webuser; production classes">
    <mkdir dir="${mod_webuser.output.dir}"/>
    <javac destdir="${mod_webuser.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mod_webuser}/javac">
      <compilerarg line="${compiler.args.mod_webuser}"/>
      <bootclasspath refid="mod_webuser.module.bootclasspath"/>
      <classpath refid="mod_webuser.module.production.classpath"/>
      <src refid="mod_webuser.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mod_webuser"/>
    </javac>
    
    <copy todir="${mod_webuser.output.dir}">
      <fileset dir="${module.mod_webuser.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mod_webuser.tests" depends="compile.module.mod_webuser.production" description="compile module mod_webuser; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mod_webuser" description="cleanup module">
    <delete dir="${mod_webuser.output.dir}"/>
    <delete dir="${mod_webuser.testoutput.dir}"/>
  </target>
</project>