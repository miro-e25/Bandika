<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mod_portal" default="compile.module.mod_portal">
  <dirname property="module.mod_portal.basedir" file="${ant.file.module_mod_portal}"/>
  
  <property name="module.jdk.home.mod_portal" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mod_portal" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mod_portal" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mod_portal" value="${compiler.args}"/>
  
  <property name="mod_portal.output.dir" value="${module.mod_portal.basedir}/../out/production/mod_portal"/>
  <property name="mod_portal.testoutput.dir" value="${module.mod_portal.basedir}/../out/test/mod_portal"/>
  
  <path id="mod_portal.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mod_portal.module.production.classpath">
    <path refid="${module.jdk.classpath.mod_portal}"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <path refid="library.tomcatlib.classpath"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_crypto.output.dir}"/>
    <pathelement location="${mod_thread.output.dir}"/>
    <pathelement location="${mod_webuser.output.dir}"/>
  </path>
  
  <path id="mod_portal.runtime.production.module.classpath">
    <pathelement location="${mod_portal.output.dir}"/>
    <path refid="mod_webapp.runtime.production.module.classpath"/>
    <path refid="base_app.runtime.production.module.classpath"/>
    <path refid="mod_crypto.runtime.production.module.classpath"/>
    <path refid="mod_thread.runtime.production.module.classpath"/>
    <path refid="mod_webuser.runtime.production.module.classpath"/>
  </path>
  
  <path id="mod_portal.module.classpath">
    <path refid="${module.jdk.classpath.mod_portal}"/>
    <pathelement location="${mod_portal.output.dir}"/>
    <pathelement location="${mod_webapp.testoutput.dir}"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <path refid="library.tomcatlib.classpath"/>
    <pathelement location="${base_app.testoutput.dir}"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_crypto.testoutput.dir}"/>
    <pathelement location="${mod_crypto.output.dir}"/>
    <pathelement location="${mod_thread.testoutput.dir}"/>
    <pathelement location="${mod_thread.output.dir}"/>
    <pathelement location="${mod_webuser.testoutput.dir}"/>
    <pathelement location="${mod_webuser.output.dir}"/>
  </path>
  
  <path id="mod_portal.runtime.module.classpath">
    <pathelement location="${mod_portal.testoutput.dir}"/>
    <pathelement location="${mod_portal.output.dir}"/>
    <path refid="mod_webapp.runtime.module.classpath"/>
    <path refid="library.tomcatlib.classpath"/>
    <path refid="base_app.runtime.module.classpath"/>
    <path refid="mod_crypto.runtime.module.classpath"/>
    <path refid="mod_thread.runtime.module.classpath"/>
    <path refid="mod_webuser.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.mod_portal">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mod_portal">
    <patternset refid="excluded.from.module.mod_portal"/>
  </patternset>
  
  <path id="mod_portal.module.sourcepath">
    <dirset dir="${module.mod_portal.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mod_portal" depends="compile.module.mod_portal.production,compile.module.mod_portal.tests" description="Compile module mod_portal"/>
  
  <target name="compile.module.mod_portal.production" depends="compile.module.mod_webapp,compile.module.base_app,compile.module.mod_crypto,compile.module.mod_thread,compile.module.mod_webuser" description="Compile module mod_portal; production classes">
    <mkdir dir="${mod_portal.output.dir}"/>
    <javac destdir="${mod_portal.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mod_portal}/javac">
      <compilerarg line="${compiler.args.mod_portal}"/>
      <bootclasspath refid="mod_portal.module.bootclasspath"/>
      <classpath refid="mod_portal.module.production.classpath"/>
      <src refid="mod_portal.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mod_portal"/>
    </javac>
    
    <copy todir="${mod_portal.output.dir}">
      <fileset dir="${module.mod_portal.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mod_portal.tests" depends="compile.module.mod_portal.production" description="compile module mod_portal; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mod_portal" description="cleanup module">
    <delete dir="${mod_portal.output.dir}"/>
    <delete dir="${mod_portal.testoutput.dir}"/>
  </target>
</project>