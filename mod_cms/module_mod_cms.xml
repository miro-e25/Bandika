<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mod_cms" default="compile.module.mod_cms">
  <dirname property="module.mod_cms.basedir" file="${ant.file.module_mod_cms}"/>
  
  <property name="module.jdk.home.mod_cms" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mod_cms" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mod_cms" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mod_cms" value="${compiler.args}"/>
  
  <property name="mod_cms.output.dir" value="${module.mod_cms.basedir}/../out/production/mod_cms"/>
  <property name="mod_cms.testoutput.dir" value="${module.mod_cms.basedir}/../out/test/mod_cms"/>
  
  <path id="mod_cms.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mod_cms.module.production.classpath">
    <path refid="${module.jdk.classpath.mod_cms}"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_portal.output.dir}"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <path refid="library.tomcatlib.classpath"/>
    <pathelement location="${mod_search.output.dir}"/>
  </path>
  
  <path id="mod_cms.runtime.production.module.classpath">
    <pathelement location="${mod_cms.output.dir}"/>
    <path refid="base_app.runtime.production.module.classpath"/>
    <path refid="mod_portal.runtime.production.module.classpath"/>
    <path refid="mod_webapp.runtime.production.module.classpath"/>
    <path refid="mod_search.runtime.production.module.classpath"/>
  </path>
  
  <path id="mod_cms.module.classpath">
    <path refid="${module.jdk.classpath.mod_cms}"/>
    <pathelement location="${mod_cms.output.dir}"/>
    <pathelement location="${base_app.testoutput.dir}"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_portal.testoutput.dir}"/>
    <pathelement location="${mod_portal.output.dir}"/>
    <pathelement location="${mod_webapp.testoutput.dir}"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <path refid="library.tomcatlib.classpath"/>
    <pathelement location="${mod_search.testoutput.dir}"/>
    <pathelement location="${mod_search.output.dir}"/>
  </path>
  
  <path id="mod_cms.runtime.module.classpath">
    <pathelement location="${mod_cms.testoutput.dir}"/>
    <pathelement location="${mod_cms.output.dir}"/>
    <path refid="base_app.runtime.module.classpath"/>
    <path refid="mod_portal.runtime.module.classpath"/>
    <path refid="mod_webapp.runtime.module.classpath"/>
    <path refid="library.tomcatlib.classpath"/>
    <path refid="mod_search.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.mod_cms">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mod_cms">
    <patternset refid="excluded.from.module.mod_cms"/>
  </patternset>
  
  <path id="mod_cms.module.sourcepath">
    <dirset dir="${module.mod_cms.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mod_cms" depends="compile.module.mod_cms.production,compile.module.mod_cms.tests" description="Compile module mod_cms"/>
  
  <target name="compile.module.mod_cms.production" depends="compile.module.base_app,compile.module.mod_portal,compile.module.mod_webapp,compile.module.mod_search" description="Compile module mod_cms; production classes">
    <mkdir dir="${mod_cms.output.dir}"/>
    <javac destdir="${mod_cms.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mod_cms}/javac">
      <compilerarg line="${compiler.args.mod_cms}"/>
      <bootclasspath refid="mod_cms.module.bootclasspath"/>
      <classpath refid="mod_cms.module.production.classpath"/>
      <src refid="mod_cms.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mod_cms"/>
    </javac>
    
    <copy todir="${mod_cms.output.dir}">
      <fileset dir="${module.mod_cms.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mod_cms.tests" depends="compile.module.mod_cms.production" description="compile module mod_cms; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mod_cms" description="cleanup module">
    <delete dir="${mod_cms.output.dir}"/>
    <delete dir="${mod_cms.testoutput.dir}"/>
  </target>
</project>