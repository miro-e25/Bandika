<?xml version="1.0" encoding="UTF-8"?>
<project name="module_resources" default="compile.module.resources">
  <dirname property="module.resources.basedir" file="${ant.file.module_resources}"/>
  
  <property name="module.jdk.home.resources" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.resources" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.resources" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.resources" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="resources.output.dir" value="${module.resources.basedir}/../out/production/resources"/>
  <property name="resources.testoutput.dir" value="${module.resources.basedir}/../out/test/resources"/>
  
  <path id="resources.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="resources.module.production.classpath">
    <path refid="${module.jdk.classpath.resources}"/>
  </path>
  
  <path id="resources.runtime.production.module.classpath">
    <pathelement location="${resources.output.dir}"/>
  </path>
  
  <path id="resources.module.classpath">
    <path refid="${module.jdk.classpath.resources}"/>
    <pathelement location="${resources.output.dir}"/>
  </path>
  
  <path id="resources.runtime.module.classpath">
    <pathelement location="${resources.testoutput.dir}"/>
    <pathelement location="${resources.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.resources">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.resources">
    <patternset refid="excluded.from.module.resources"/>
  </patternset>
  
  
  <target name="compile.module.resources" depends="compile.module.resources.production,compile.module.resources.tests" description="Compile module resources"/>
  
  <target name="compile.module.resources.production" depends="register.custom.compilers" description="Compile module resources; production classes"/>
  
  <target name="compile.module.resources.tests" depends="register.custom.compilers,compile.module.resources.production" description="compile module resources; test classes" unless="skip.tests"/>
  
  <target name="clean.module.resources" description="cleanup module">
    <delete dir="${resources.output.dir}"/>
    <delete dir="${resources.testoutput.dir}"/>
  </target>
</project>