<?xml version="1.0" encoding="UTF-8"?>
<project name="module_cms" default="compile.module.cms">
  <dirname property="module.cms.basedir" file="${ant.file.module_cms}"/>
  
  <property name="module.jdk.home.cms" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.cms" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.cms" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.cms" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="cms.output.dir" value="${module.cms.basedir}/../out/production/cms"/>
  <property name="cms.testoutput.dir" value="${module.cms.basedir}/../out/test/cms"/>
  
  <path id="cms.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="cms.module.production.classpath">
    <path refid="${module.jdk.classpath.cms}"/>
    <path refid="library.tomcat.classpath"/>
    <path refid="library.commons.classpath"/>
    <path refid="library.mail.classpath"/>
    <path refid="library.jsoup.classpath"/>
    <path refid="library.lucene.classpath"/>
    <pathelement location="${base.output.dir}"/>
  </path>
  
  <path id="cms.runtime.production.module.classpath">
    <pathelement location="${cms.output.dir}"/>
    <path refid="library.tomcat.classpath"/>
    <path refid="library.commons.classpath"/>
    <path refid="library.mail.classpath"/>
    <path refid="library.jsoup.classpath"/>
    <path refid="library.lucene.classpath"/>
    <path refid="base.runtime.production.module.classpath"/>
  </path>
  
  <path id="cms.module.classpath">
    <path refid="${module.jdk.classpath.cms}"/>
    <pathelement location="${cms.output.dir}"/>
    <path refid="library.tomcat.classpath"/>
    <path refid="library.commons.classpath"/>
    <path refid="library.mail.classpath"/>
    <path refid="library.jsoup.classpath"/>
    <path refid="library.lucene.classpath"/>
    <pathelement location="${base.testoutput.dir}"/>
    <pathelement location="${base.output.dir}"/>
  </path>
  
  <path id="cms.runtime.module.classpath">
    <pathelement location="${cms.testoutput.dir}"/>
    <pathelement location="${cms.output.dir}"/>
    <path refid="library.tomcat.classpath"/>
    <path refid="library.commons.classpath"/>
    <path refid="library.mail.classpath"/>
    <path refid="library.jsoup.classpath"/>
    <path refid="library.lucene.classpath"/>
    <path refid="base.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.cms">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cms">
    <patternset refid="excluded.from.module.cms"/>
  </patternset>
  
  <path id="cms.module.sourcepath">
    <dirset dir="${module.cms.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.cms" depends="compile.module.cms.production,compile.module.cms.tests" description="Compile module cms"/>
  
  <target name="compile.module.cms.production" depends="register.custom.compilers,compile.module.base" description="Compile module cms; production classes">
    <mkdir dir="${cms.output.dir}"/>
    <javac2 destdir="${cms.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cms}/javac">
      <compilerarg line="${compiler.args.cms}"/>
      <bootclasspath refid="cms.module.bootclasspath"/>
      <classpath refid="cms.module.production.classpath"/>
      <src refid="cms.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cms"/>
    </javac2>
    
    <copy todir="${cms.output.dir}">
      <fileset dir="${module.cms.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cms.tests" depends="register.custom.compilers,compile.module.cms.production" description="compile module cms; test classes" unless="skip.tests"/>
  
  <target name="clean.module.cms" description="cleanup module">
    <delete dir="${cms.output.dir}"/>
    <delete dir="${cms.testoutput.dir}"/>
  </target>
</project>