<?xml version="1.0" encoding="UTF-8"?>
<project name="bandika" default="all">
  
  
  <property file="bandika.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.commons.classpath">
    <pathelement location="${basedir}/lib/commons-codec-1.10.jar"/>
    <pathelement location="${basedir}/lib/commons-lang3-3.1.jar"/>
  </path>
  
  <path id="library.jsoup.classpath">
    <pathelement location="${basedir}/lib/jsoup-1.11.2.jar"/>
  </path>
  
  <path id="library.lucene.classpath">
    <pathelement location="${basedir}/lib/lucene-codecs-6.5.0.jar"/>
    <pathelement location="${basedir}/lib/lucene-core-6.5.0.jar"/>
    <pathelement location="${basedir}/lib/lucene-highlighter-6.5.0.jar"/>
    <pathelement location="${basedir}/lib/lucene-join-6.5.0.jar"/>
    <pathelement location="${basedir}/lib/lucene-memory-6.5.0.jar"/>
    <pathelement location="${basedir}/lib/lucene-misc-6.5.0.jar"/>
    <pathelement location="${basedir}/lib/lucene-queries-6.5.0.jar"/>
    <pathelement location="${basedir}/lib/lucene-queryparser-6.5.0.jar"/>
  </path>
  
  <path id="library.mail.classpath">
    <pathelement location="${basedir}/lib/mail.jar"/>
  </path>
  
  <path id="library.tomcat.classpath">
    <pathelement location="${basedir}/../../Library/Tomcat8.5/lib/jsp-api.jar"/>
    <pathelement location="${basedir}/../../Library/Tomcat8.5/lib/servlet-api.jar"/>
    <pathelement location="${basedir}/../../Library/Tomcat8.5/lib/tomcat-api.jar"/>
    <pathelement location="${basedir}/../../Library/Tomcat8.5/lib/tomcat-dbcp.jar"/>
    <pathelement location="${basedir}/../../Library/Tomcat8.5/lib/tomcat-jdbc.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/base/module_base.xml"/>
  
  <import file="${basedir}/resources/module_resources.xml"/>
  
  <import file="${basedir}/cms/module_cms.xml"/>
  
  <import file="${basedir}/testapp/module_testapp.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.base, clean.module.resources, clean.module.cms, clean.module.testapp" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.base, compile.module.resources, compile.module.cms, compile.module.testapp" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.cmsapp" value="${basedir}/../../Library/Tomcat8.5/bandika"/>
    <property name="artifact.output.testapp" value="${basedir}/out/artifacts/testapp"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.ROOT.war" value="${artifacts.temp.dir}/ROOT.war"/>
    <property name="temp.jar.path.testapp.jar" value="${artifacts.temp.dir}/testapp.jar"/>
  </target>
  
  <target name="artifact.cmsapp" depends="init.artifacts, compile.module.cms, compile.module.base" description="Build &#39;cmsapp&#39; artifact">
    <property name="artifact.temp.output.cmsapp" value="${artifacts.temp.dir}/cmsapp"/>
    <mkdir dir="${artifact.temp.output.cmsapp}"/>
    <zip destfile="${temp.jar.path.ROOT.war}">
      <zipfileset dir="${cms.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${base.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset file="${basedir}/lib/commons-lang3-3.1.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/commons-codec-1.10.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/mail.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/lucene-codecs-6.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/lucene-core-6.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/lucene-highlighter-6.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/lucene-join-6.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/lucene-memory-6.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/lucene-misc-6.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/lucene-queries-6.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/lucene-queryparser-6.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/lib/jsoup-1.11.2.jar" prefix="WEB-INF/lib"/>
      <zipfileset dir="${basedir}/cms/web"/>
      <zipfileset file="${basedir}/cms/web/WEB-INF/web.xml" prefix="WEB-INF"/>
    </zip>
    <copy file="${temp.jar.path.ROOT.war}" tofile="${artifact.temp.output.cmsapp}/ROOT.war"/>
    <ant antfile="" target="null" dir="">
      <property name="artifact.output.path" value="${artifact.temp.output.cmsapp}"/>
    </ant>
  </target>
  
  <target name="artifact.testapp" depends="init.artifacts, compile.module.base, compile.module.testapp" description="Build &#39;testapp&#39; artifact">
    <property name="artifact.temp.output.testapp" value="${artifacts.temp.dir}/testapp"/>
    <mkdir dir="${artifact.temp.output.testapp}"/>
    <jar destfile="${temp.jar.path.testapp.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${base.output.dir}"/>
      <zipfileset dir="${testapp.output.dir}"/>
      <zipfileset file="${basedir}/lib/commons-lang3-3.1.jar"/>
      <zipfileset file="${basedir}/lib/commons-codec-1.10.jar"/>
    </jar>
    <copy file="${temp.jar.path.testapp.jar}" tofile="${artifact.temp.output.testapp}/testapp.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.cmsapp, artifact.testapp" description="Build all artifacts">
    <mkdir dir="${artifact.output.cmsapp}"/>
    <copy todir="${artifact.output.cmsapp}">
      <fileset dir="${artifact.temp.output.cmsapp}"/>
    </copy>
    <mkdir dir="${artifact.output.testapp}"/>
    <copy todir="${artifact.output.testapp}">
      <fileset dir="${artifact.temp.output.testapp}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>