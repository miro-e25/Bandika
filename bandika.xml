<?xml version="1.0" encoding="UTF-8"?>
<project name="bandika" default="all">
  
  
  <property file="bandika.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.commons.classpath">
    <pathelement location="${basedir}/base_app/lib/commons-lang3-3.1.jar"/>
  </path>
  
  <path id="library.lucene.classpath">
    <pathelement location="${basedir}/mod_search/lib/lucene-core-3.5.0.jar"/>
    <pathelement location="${basedir}/mod_search/lib/lucene-highlighter-3.5.0.jar"/>
    <pathelement location="${basedir}/mod_search/lib/lucene-memory-3.5.0.jar"/>
    <pathelement location="${basedir}/mod_search/lib/lucene-misc-3.5.0.jar"/>
    <pathelement location="${basedir}/mod_search/lib/lucene-queries-3.5.0.jar"/>
  </path>
  
  <path id="library.mail.classpath">
    <pathelement location="${basedir}/mod_mail/lib/mail.jar"/>
  </path>
  
  <path id="library.tika.classpath">
    <pathelement location="${basedir}/mod_search/lib/tika-app-1.1-139.jar"/>
  </path>
  
  <path id="library.tomcatlib.classpath">
    <pathelement location="${basedir}/mod_webapp/lib/jasper.jar"/>
    <pathelement location="${basedir}/mod_webapp/lib/jsp-api.jar"/>
    <pathelement location="${basedir}/mod_webapp/lib/servlet-api.jar"/>
    <pathelement location="${basedir}/mod_webapp/lib/tomcat-api.jar"/>
    <pathelement location="${basedir}/mod_webapp/lib/tomcat-jdbc.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  
  <!-- Modules -->
  
  <import file="${basedir}/base_app/module_base_app.xml"/>
  
  <import file="${basedir}/mod_thread/module_mod_thread.xml"/>
  
  <import file="${basedir}/mod_crypto/module_mod_crypto.xml"/>
  
  <import file="${basedir}/mod_mail/module_mod_mail.xml"/>
  
  <import file="${basedir}/mod_portcommunication/module_mod_portcommunication.xml"/>
  
  <import file="${basedir}/mod_webapp/module_mod_webapp.xml"/>
  
  <import file="${basedir}/mod_cluster/module_mod_cluster.xml"/>
  
  <import file="${basedir}/mod_webuser/module_mod_webuser.xml"/>
  
  <import file="${basedir}/mod_portal/module_mod_portal.xml"/>
  
  <import file="${basedir}/mod_search/module_mod_search.xml"/>
  
  <import file="${basedir}/mod_cms/module_mod_cms.xml"/>
  
  <import file="${basedir}/mod_team/module_mod_team.xml"/>
  
  <import file="${basedir}/bandika/module_bandika.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.base_app, clean.module.mod_thread, clean.module.mod_crypto, clean.module.mod_mail, clean.module.mod_portcommunication, clean.module.mod_webapp, clean.module.mod_cluster, clean.module.mod_webuser, clean.module.mod_portal, clean.module.mod_search, clean.module.mod_cms, clean.module.mod_team, clean.module.bandika" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.base_app, compile.module.mod_thread, compile.module.mod_crypto, compile.module.mod_mail, compile.module.mod_portcommunication, compile.module.mod_webapp, compile.module.mod_cluster, compile.module.mod_webuser, compile.module.mod_portal, compile.module.mod_search, compile.module.mod_cms, compile.module.mod_team, compile.module.bandika" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.root" value="${basedir}/../../server/tomcat-7/bandika"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.ROOT.war" value="${artifacts.temp.dir}/ROOT.war"/>
  </target>
  
  <target name="artifact.root" depends="init.artifacts, compile.module.bandika, compile.module.base_app, compile.module.mod_crypto, compile.module.mod_mail, compile.module.mod_portal, compile.module.mod_thread, compile.module.mod_webapp, compile.module.mod_search, compile.module.mod_cluster, compile.module.mod_portcommunication, compile.module.mod_cms, compile.module.mod_team, compile.module.mod_webuser" description="Build &#39;ROOT&#39; artifact">
    <property name="artifact.temp.output.root" value="${artifacts.temp.dir}/ROOT"/>
    <mkdir dir="${artifact.temp.output.root}"/>
    <zip destfile="${temp.jar.path.ROOT.war}">
      <zipfileset dir="${bandika.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${base_app.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_crypto.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_mail.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_portal.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_thread.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_webapp.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_search.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_cluster.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_portcommunication.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_cms.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_team.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset dir="${mod_webuser.output.dir}" prefix="WEB-INF/classes"/>
      <zipfileset file="${basedir}/mod_mail/lib/mail.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/base_app/lib/commons-lang3-3.1.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/mod_search/lib/lucene-core-3.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/mod_search/lib/lucene-highlighter-3.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/mod_search/lib/lucene-memory-3.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/mod_search/lib/lucene-misc-3.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset file="${basedir}/mod_search/lib/lucene-queries-3.5.0.jar" prefix="WEB-INF/lib"/>
      <zipfileset dir="${basedir}/bandika/web"/>
      <zipfileset file="${basedir}/bandika/web/WEB-INF/web.xml" prefix="WEB-INF"/>
      <zipfileset dir="${basedir}/mod_cluster/web"/>
      <zipfileset file="${basedir}/mod_webapp/webxml/web.xml" prefix="WEB-INF"/>
      <zipfileset dir="${basedir}/mod_cms/web"/>
      <zipfileset file="${basedir}/mod_webapp/webxml/web.xml" prefix="WEB-INF"/>
      <zipfileset dir="${basedir}/mod_portal/web"/>
      <zipfileset file="${basedir}/mod_webapp/webxml/web.xml" prefix="WEB-INF"/>
      <zipfileset dir="${basedir}/mod_search/web"/>
      <zipfileset file="${basedir}/mod_webapp/webxml/web.xml" prefix="WEB-INF"/>
      <zipfileset dir="${basedir}/mod_team/web"/>
      <zipfileset file="${basedir}/mod_webapp/webxml/web.xml" prefix="WEB-INF"/>
      <zipfileset dir="${basedir}/mod_webuser/web"/>
      <zipfileset file="${basedir}/mod_webapp/webxml/web.xml" prefix="WEB-INF"/>
    </zip>
    <copy file="${temp.jar.path.ROOT.war}" tofile="${artifact.temp.output.root}/ROOT.war"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.root" description="Build all artifacts">
    <mkdir dir="${artifact.output.root}"/>
    <copy todir="${artifact.output.root}">
      <fileset dir="${artifact.temp.output.root}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>