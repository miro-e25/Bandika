<?xml version="1.0" encoding="UTF-8"?>
<cms:templates xmlns:cms="https://elbe5.de" xmlns:cmspart="https://elbe5.de">
    <!-- master -->
    <cms:template type="MASTER" name="defaultMaster" displayName="Default Master Page">
        <!DOCTYPE html>
        <html lang="en">
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
                <cms:head />
                <link rel="shortcut icon" href="/favicon.ico"/>
                <link rel="stylesheet" href="/static-content/css/app.css"/>
                <script type="text/javascript" src="/static-content/js/jquery-1.12.4.min.js"></script>
                <script type="text/javascript" src="/static-content/js/bootstrap.bundle.min.js"></script>
                <script type="text/javascript" src="/static-content/js/bootstrap.tree.js"></script>
                <script type="text/javascript" src="/static-content/ckeditor/ckeditor.js"></script>
                <script type="text/javascript" src="/static-content/ckeditor/adapters/jquery.js"></script>
                <script type="text/javascript" src="/static-content/js/ace.js"></script>
                <script type="text/javascript" src="/static-content/js/cms.js"></script>
            </head>
            <body>
                <header>
                    <div class="container">
                        <div class="top row">
                            <section class="col-12 sysnav">
                                <cms:sysnav toggle="true" pageEdit="true" search="true" languages="true" profile="true" registration="true"/>
                            </section>
                        </div>
                        <div class="menu row">
                            <section class="col-12 menu">
                                <nav class="navbar navbar-expand-lg navbar-light">
                                    <a class="navbar-brand" href="/"><img src="/static-content/img/logo-light.png" alt=""/></a>
                                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                        <span class="fa fa-2x fa-bars"></span>
                                    </button>
                                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                        <ul class="navbar-nav mr-auto">
                                        <cms:mainnav />
                                        </ul>
                                    </div>
                                </nav>
                            </section>
                        </div>
                        <div class="breadcrumbheader row">
                            <section class="col-12 bc">
                                <cms:breadcrumb />
                            </section>
                        </div>
                    </div>
                </header>
                <main id="main" role="main">
                    <div id="pageContainer" class="container">
                        <cms:pagecontent />
                    </div>
                </main>
                <footer>
                    <div class="container">
                        <cms:footernav/>
                    </div>
                </footer>
                <cms:modal/>
            </body>
        </html>
    </cms:template>
    <!-- pages -->
    <cms:template type="PAGE" name="homePage" displayName="Home Page Layout">
        <cms:message />
        <section class="contentTop">
            <cmspart:section name="top"></cmspart:section>
        </section>
        <div class="row">
            <section class="col-md-8 contentSection">
                <cmspart:section name="main"></cmspart:section>
            </section>
            <aside class="col-md-4 asideSection">
                <cmspart:section name="aside" ></cmspart:section>
            </aside>
        </div>
    </cms:template>
    <cms:template type="PAGE" name="fullPage" displayName="Full Page Layout">
        <cms:message />
        <section class="contentTop">
            <cmspart:section name="top"></cmspart:section>
        </section>
        <section class="contentSection">
            <cmspart:section flex="true" name="main"></cmspart:section>
        </section>
    </cms:template>
    <cms:template type="PAGE" name="articlePage" displayName="Article Page Layout">
        <cms:message />
        <section class="contentTop">
            <cmspart:section name="top"></cmspart:section>
        </section>
        <div class="row">
            <section class="col-md-8 contentSection">
                <cmspart:section name="main"></cmspart:section>
            </section>
            <aside class="col-md-4 asideSection">
                <cmspart:section name="aside"></cmspart:section>
            </aside>
        </div>
    </cms:template>
    <!-- content parts -->
    <cms:template type="PART" name="H1" displayName="Headline 1">
        <h1>
            <cmspart:textfield name="header" placeholder="Lorem ipsum"/>
        </h1>
    </cms:template>
    <cms:template type="PART" name="H2" displayName="Headline 2">
        <h2>
            <cmspart:textfield name="header" placeholder="Lorem ipsum"/>
        </h2>
    </cms:template>
    <cms:template type="PART" name="H3" displayName="Headline 3">
        <h3>
            <cmspart:textfield name="header" placeholder="Lorem ipsum"/>
        </h3>
    </cms:template>
    <cms:template type="PART" name="Paragraph" displayName="Paragraph">
        <div class="paragraph">
            <cmspart:htmlfield name="html" placeholder="Lorem ipsum"/>
        </div>
    </cms:template>
    <cms:template type="PART" name="ParagraphWithHeader" displayName="Paragraph with Header">
        <div class="paragraph">
            <h2>
                <cmspart:textfield name="header" placeholder="Lorem ipsum"/>
            </h2>
            <cmspart:htmlfield name="html" placeholder="Lorem ipsum"/>
        </div>
    </cms:template>
    <cms:template type="PART" name="Image" displayName="Image">
        <div class="imageBox">
            <cmspart:htmlfield name="html" placeholder="Image"/>
        </div>
    </cms:template>

</cms:templates>

