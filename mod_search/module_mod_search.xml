<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mod_search" default="compile.module.mod_search">
  <dirname property="module.mod_search.basedir" file="${ant.file.module_mod_search}"/>
  
  <property name="module.jdk.home.mod_search" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mod_search" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mod_search" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mod_search" value="${compiler.args}"/>
  
  <property name="mod_search.output.dir" value="${module.mod_search.basedir}/../out/production/mod_search"/>
  <property name="mod_search.testoutput.dir" value="${module.mod_search.basedir}/../out/test/mod_search"/>
  
  <path id="mod_search.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mod_search.module.production.classpath">
    <path refid="${module.jdk.classpath.mod_search}"/>
    <path refid="library.tika.classpath"/>
    <path refid="library.lucene.classpath"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <pathelement location="${mod_webuser.output.dir}"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_portal.output.dir}"/>
    <pathelement location="${mod_thread.output.dir}"/>
  </path>
  
  <path id="mod_search.runtime.production.module.classpath">
    <pathelement location="${mod_search.output.dir}"/>
    <path refid="library.lucene.classpath"/>
    <path refid="mod_webapp.runtime.production.module.classpath"/>
    <path refid="mod_webuser.runtime.production.module.classpath"/>
    <path refid="base_app.runtime.production.module.classpath"/>
    <path refid="mod_portal.runtime.production.module.classpath"/>
    <path refid="mod_thread.runtime.production.module.classpath"/>
  </path>
  
  <path id="mod_search.module.classpath">
    <path refid="${module.jdk.classpath.mod_search}"/>
    <pathelement location="${mod_search.output.dir}"/>
    <path refid="library.tika.classpath"/>
    <path refid="library.lucene.classpath"/>
    <pathelement location="${mod_webapp.testoutput.dir}"/>
    <pathelement location="${mod_webapp.output.dir}"/>
    <pathelement location="${mod_webuser.testoutput.dir}"/>
    <pathelement location="${mod_webuser.output.dir}"/>
    <pathelement location="${base_app.testoutput.dir}"/>
    <pathelement location="${base_app.output.dir}"/>
    <pathelement location="${mod_portal.testoutput.dir}"/>
    <pathelement location="${mod_portal.output.dir}"/>
    <pathelement location="${mod_thread.testoutput.dir}"/>
    <pathelement location="${mod_thread.output.dir}"/>
  </path>
  
  <path id="mod_search.runtime.module.classpath">
    <pathelement location="${mod_search.testoutput.dir}"/>
    <pathelement location="${mod_search.output.dir}"/>
    <path refid="library.tika.classpath"/>
    <path refid="library.lucene.classpath"/>
    <path refid="mod_webapp.runtime.module.classpath"/>
    <path refid="mod_webuser.runtime.module.classpath"/>
    <path refid="base_app.runtime.module.classpath"/>
    <path refid="mod_portal.runtime.module.classpath"/>
    <path refid="mod_thread.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.mod_search">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mod_search">
    <patternset refid="excluded.from.module.mod_search"/>
  </patternset>
  
  <path id="mod_search.module.sourcepath">
    <dirset dir="${module.mod_search.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mod_search" depends="compile.module.mod_search.production,compile.module.mod_search.tests" description="Compile module mod_search"/>
  
  <target name="compile.module.mod_search.production" depends="compile.module.mod_webapp,compile.module.mod_webuser,compile.module.base_app,compile.module.mod_portal,compile.module.mod_thread" description="Compile module mod_search; production classes">
    <mkdir dir="${mod_search.output.dir}"/>
    <javac destdir="${mod_search.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mod_search}/javac">
      <compilerarg line="${compiler.args.mod_search}"/>
      <bootclasspath refid="mod_search.module.bootclasspath"/>
      <classpath refid="mod_search.module.production.classpath"/>
      <src refid="mod_search.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mod_search"/>
    </javac>
    
    <copy todir="${mod_search.output.dir}">
      <fileset dir="${module.mod_search.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mod_search.tests" depends="compile.module.mod_search.production" description="compile module mod_search; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mod_search" description="cleanup module">
    <delete dir="${mod_search.output.dir}"/>
    <delete dir="${mod_search.testoutput.dir}"/>
  </target>
</project>