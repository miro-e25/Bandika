<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mod_crypto" default="compile.module.mod_crypto">
  <dirname property="module.mod_crypto.basedir" file="${ant.file.module_mod_crypto}"/>
  
  <property name="module.jdk.home.mod_crypto" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mod_crypto" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mod_crypto" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mod_crypto" value="${compiler.args}"/>
  
  <property name="mod_crypto.output.dir" value="${module.mod_crypto.basedir}/../out/production/mod_crypto"/>
  <property name="mod_crypto.testoutput.dir" value="${module.mod_crypto.basedir}/../out/test/mod_crypto"/>
  
  <path id="mod_crypto.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mod_crypto.module.production.classpath">
    <path refid="${module.jdk.classpath.mod_crypto}"/>
    <pathelement location="${base_app.output.dir}"/>
  </path>
  
  <path id="mod_crypto.runtime.production.module.classpath">
    <pathelement location="${mod_crypto.output.dir}"/>
    <path refid="base_app.runtime.production.module.classpath"/>
  </path>
  
  <path id="mod_crypto.module.classpath">
    <path refid="${module.jdk.classpath.mod_crypto}"/>
    <pathelement location="${mod_crypto.output.dir}"/>
    <pathelement location="${base_app.testoutput.dir}"/>
    <pathelement location="${base_app.output.dir}"/>
  </path>
  
  <path id="mod_crypto.runtime.module.classpath">
    <pathelement location="${mod_crypto.testoutput.dir}"/>
    <pathelement location="${mod_crypto.output.dir}"/>
    <path refid="base_app.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.mod_crypto">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mod_crypto">
    <patternset refid="excluded.from.module.mod_crypto"/>
  </patternset>
  
  <path id="mod_crypto.module.sourcepath">
    <dirset dir="${module.mod_crypto.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mod_crypto" depends="compile.module.mod_crypto.production,compile.module.mod_crypto.tests" description="Compile module mod_crypto"/>
  
  <target name="compile.module.mod_crypto.production" depends="compile.module.base_app" description="Compile module mod_crypto; production classes">
    <mkdir dir="${mod_crypto.output.dir}"/>
    <javac destdir="${mod_crypto.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mod_crypto}/javac">
      <compilerarg line="${compiler.args.mod_crypto}"/>
      <bootclasspath refid="mod_crypto.module.bootclasspath"/>
      <classpath refid="mod_crypto.module.production.classpath"/>
      <src refid="mod_crypto.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mod_crypto"/>
    </javac>
    
    <copy todir="${mod_crypto.output.dir}">
      <fileset dir="${module.mod_crypto.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mod_crypto.tests" depends="compile.module.mod_crypto.production" description="compile module mod_crypto; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mod_crypto" description="cleanup module">
    <delete dir="${mod_crypto.output.dir}"/>
    <delete dir="${mod_crypto.testoutput.dir}"/>
  </target>
</project>